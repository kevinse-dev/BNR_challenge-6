<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <style>
      .registerbtn {
        background-color: #043baa;
        color: white;
        padding: 16px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
      }

      .registerbtn:hover {
        opacity: 1;
      }
    </style>
    <title>Dashboard</title>
  </head>
  <body>
    <div class="flex-row d-flex" style="height: 800px; width: 100%">
      <section id="sidebar" class="bd-highlight p-2 bg-dark text-white" style="width: 15%">
        <div class="justify-content-center flex-column d-flex mt-5">
          <div class="bg-white p-5 w-25 align-self-center"></div>
          <div class="align-self-center text-center">
            <p><%= admin[0].username %></p>
            <p><%= admin[0].email %></p>
          </div>
        </div>
      </section>
      <section id="content" class="bd-highlight" style="width: 85%">
        <div class="">
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Navbar</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Features</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Pricing</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>

          <div id="card" class="p-2 m-5 d-flex justify-content-around flex-row h-auto mt-5">
            <div class="p-2">
              <div class="card" style="width: 18rem">
                <div class="card-body bg-dark text-white rounded-2">
                  <h5 class="card-title">Card title</h5>
                  <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="#" class="card-link">Card link</a>
                </div>
              </div>
            </div>
            <div class="p-2">
              <div class="card" style="width: 18rem">
                <div class="card-body bg-dark text-white rounded-2">
                  <h5 class="card-title">Card title</h5>
                  <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="#" class="card-link">Card link</a>
                </div>
              </div>
            </div>
            <div class="p-2">
              <div class="card" style="width: 18rem">
                <div class="card-body bg-dark text-white rounded-2">
                  <h5 class="card-title">Card title</h5>
                  <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="#" class="card-link">Card link</a>
                </div>
              </div>
            </div>
          </div>

          <div class="container w-25 d-inline-block mx-5">
            <a href="/dashboard/addUser">
              <button type="submit" class="registerbtn">Add User</button>
            </a>
          </div>

          <div id="table" class="mx-5">
            <table class="table table-striped">
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
              <% users.forEach((user, key) => { %>
              <tr>
                  <td> <%= key + 1 %> </td>
                  <td>
                    <%= user.firstName %>
                    <%= user.lastName %>
                    <%= %>
                  </td>
                  <td> <%= user.address %> </td>
                  <td> <%= user.phone %> </td>
                  <td>
                    <a href="/dashboard/update/<%= user.id %>" class="btn btn-success border rounded-2">Update</a>
                    <a href="/dashboard/<%= user.id %>" class="btn btn-danger border rounded-2">Delete</a>
                  </td>
                </tr>
                <% }) %>
            </table>
          </div>
        </div>
      </section>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
